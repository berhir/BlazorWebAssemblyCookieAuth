{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": [
      {
        "RouteId": "apiRoute",
        "ClusterId": "apiCluster",
        "Match": {
          "Path": "api/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api" }
        ]
      }
    ],
    "Clusters": {
      "apiCluster": {
        "Destinations": {
          "apiDestination": {
            "Address": "https://localhost:5101"
          }
        }
      }
    }
  }
}
